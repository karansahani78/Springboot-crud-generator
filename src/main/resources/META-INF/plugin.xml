<idea-plugin>

    <!-- Unique plugin ID -->
    <id>com.karan.springbootcrud</id>

    <!-- Plugin name shown in Marketplace -->
    <name>Spring Boot CRUD Generator</name>

    <!-- Plugin version -->
    <version>1.0.0</version>

    <!-- Compatible IntelliJ IDEA version (2023.3+) -->
    <idea-version since-build="233"/>

    <!-- Vendor information (MUST have inner text) -->
    <vendor
            name="Karan Sahani"
            email="karansahani723@gmail.com"
            url="https://github.com/karansahani78">
        Karan Sahani
    </vendor>

    <!-- Plugin description -->
    <description><![CDATA[
        <p>
            <b>Spring Boot CRUD Generator</b> is an IntelliJ IDEA plugin that generates
            <b>production-ready CRUD layers</b> for Spring Boot applications directly
            from a JPA entity.
        </p>

        <p><b>Generated components:</b></p>
        <ul>
            <li>REST Controller</li>
            <li>Service Layer</li>
            <li>Repository (JPA)</li>
            <li>DTO</li>
            <li>Mapper</li>
        </ul>

        <p>
            The plugin helps backend developers eliminate repetitive boilerplate code
            and follow a clean, layered architecture using
            <b>IntelliJ PSI-based code generation</b>.
        </p>

        <p>
            <b>Author:</b> Karan Sahani<br/>
            <b>GitHub:</b>
            <a href="https://github.com/karansahani78">github.com/karansahani78</a><br/>
            <b>LinkedIn:</b>
            <a href="https://www.linkedin.com/in/karan-sahani">
                linkedin.com/in/karan-sahani
            </a>
        </p>
    ]]></description>

    <!-- Required IntelliJ module -->
    <depends>com.intellij.modules.java</depends>

    <!-- Plugin action -->
    <actions>
        <action
                id="GenerateSpringCrud"
                class="com.karan.intellijplatformplugin.action.GenerateCrudAction"
                text="Generate Spring Boot CRUD"
                description="Generate Controller, Service, Repository, DTO, and Mapper">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>
